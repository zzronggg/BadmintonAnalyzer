<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zzrong.badminton_analyzer">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START"/>
        </intent>
    </queries>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.BadmintonAnalyzer">
        <activity
                android:name=".act.SubExoPlayer"
                android:exported="true"/>
        <activity
                android:name=".act.CreateSuccessActivity"
                android:exported="true"/>
        <activity
                android:name=".act.CreateAccountActivity"
                android:exported="true"
                android:windowSoftInputMode="adjustPan|adjustNothing"/>
        <activity
                android:name=".act.ResetSuccessActivity"
                android:exported="true"/>
        <activity
                android:name=".act.ResetPWActivity"
                android:exported="true"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".act.LoginActivity"
                android:exported="true"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".act.YouTubeActivity"
                android:exported="true"/>
        <activity
                android:name=".act.ExoPlayer"
                android:configChanges="orientation|screenSize|layoutDirection"
                android:exported="true"
                android:theme="@style/top_app_bar_yellow"/>
        <activity
                android:name=".act.SearchActivity"
                android:configChanges="keyboardHidden|orientation"
                android:exported="true"
                android:windowSoftInputMode="adjustPan"/>
        <activity
                android:name=".act.RecentlyViewActivity"
                android:exported="true"
                android:theme="@style/top_app_bar_yellow"/>
    </application>

</manifest>